modules = ["nodejs-20", "web"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Expo Web Server"

[[workflows.workflow]]
name = "Expo Web Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run web"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3000

[[ports]]
localPort = 38635
externalPort = 3001

[[ports]]
localPort = 40773
externalPort = 3003

[[ports]]
localPort = 43333
externalPort = 3002

[deployment]
deploymentTarget = "autoscale"
run = ["npx", "serve", "-s", "dist", "-l", "5000"]
build = ["npx", "expo", "export", "--platform", "web"]
